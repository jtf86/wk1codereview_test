<h1>Contacts</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No contacts have been added yet.</h3>
}
@foreach (var contact in Model)
{
  <hr>
    <h3>@contact.GetName()</h3>
    <p>@contact.GetPhoneNumber()</p>
    <p>@contact.GetAddress()</p>
  <hr>
}
<hr>
<p><a href="/">Back home</a></p>
<p><a href="/contacts/new">Add a contact</a></p>
<form action="/contacts_cleared" method="post">
  <button type="submit">Delete all contacts</button>
</form>
